import app from '../server/index'

export default async function handler(req, res) {
  // On n'a pas besoin de createServer et parse ici
  // car Vercel fournit déjà req et res formatés
  return new Promise((resolve, reject) => {
    app(req, res)
    // On écoute la fin de la réponse pour résoudre la promesse
    res.on('finish', resolve)
    res.on('error', reject)
  })
}